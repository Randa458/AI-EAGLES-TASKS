   "source": [
    "n, m = map(int, input().split())\n",
    "subarrays = [tuple(map(int, input().split())) for _ in range(m)]\n",
    "\n",
    "min_len = n  \n",
    "\n",
    "for l, r in subarrays:\n",
    "    min_len = min(min_len, r - l + 1)  \n",
    "\n",
    "array = []\n",
    "for i in range(n):\n",
    "    array.append(i % min_len)\n",
    "\n",
    "print(min_len)\n",
    "print(*array)\n",
    "\n"
   ]
