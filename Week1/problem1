def count_agreed_problems():
    num_problems = int(input("Enter the number of problems: "))
    count = 0

    for i in range(num_problems):
        responses = input().strip().split()

        responses = [int(resp) for resp in responses]

        if sum(responses) >= 2:
            count += 1

    return count

result = count_agreed_problems()
print(result)

